@page
@model Master_Data.Pages.Products.EditModel
@{
}
<br />
<h2>EDIT DATA</h2>

<!--Jika error-->
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!--Jika Sukses-->
@if (Model.successMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="product_id" value="@Model.productInfo.product_id" />
<!--Formulir-->
<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Product ID</label>
    <div class="col-sm-6">
        <input type="number" class="form-control" name="product_id" value="@Model.productInfo.product_id" />
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Marking</label>
    <div class="col-sm-6">
        <input type="number" class="form-control" name="marking" value="@Model.productInfo.marking" />
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Product Name</label>
    <div class="col-sm-6">
        <input type="text" class="form-control" name="product_name" value="@Model.productInfo.product_name" />
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Machine Name</label>
    <div class="col-sm-6">
        <input type="text" class="form-control" name="machine_name" value="@Model.productInfo.machine_name" />
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Description</label>
    <div class="col-sm-6">
        <input type="text" class="form-control" name="description" value="@Model.productInfo.description" />
    </div>
</div>

<!--Button-->
<div class="row mb-3">
    <div class="col-sm-3 d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <div class="col-sm-3 d-grid">
        <a class="btn btn-outline-primary" href="/Products/Index" role="button">Cancel</a>
    </div>
</div>
</form>